{
  "id": "brain-search",
  "plugin": "brain",
  "version": "1.0.0",
  "ttl": 300000,
  "showProgress": false,
  "entryPoint": "enter-query",
  "steps": {
    "enter-query": {
      "type": "text-input",
      "content": "üîç Brain Search\n\nWhat are you looking for?",
      "placeholder": "Search query",
      "validation": {
        "minLength": 1,
        "maxLength": 200,
        "errorMessage": "Please enter a search query."
      },
      "next": "execute-search"
    },
    "execute-search": {
      "type": "info",
      "content": "Searching brain for \"{{data.enter-query.input}}\"...",
      "toolCall": {
        "name": "brain_search",
        "paramMap": {
          "query": "$data.enter-query.input"
        },
        "onError": "error"
      },
      "next": "done"
    },
    "done": {
      "type": "info",
      "content": "üîç Search results shown above.",
      "terminal": true
    },
    "error": {
      "type": "choice",
      "content": "‚ùå Search failed.\n\n{{error}}\n\nWhat would you like to do?",
      "options": [
        {
          "id": "retry",
          "label": "üîÑ Retry",
          "style": "primary"
        },
        {
          "id": "cancel",
          "label": "‚ùå Cancel",
          "style": "danger"
        }
      ],
      "includeBack": false,
      "includeCancel": false,
      "transitions": {
        "retry": "execute-search",
        "cancel": "error-cancelled"
      }
    },
    "error-cancelled": {
      "type": "info",
      "content": "Operation cancelled.",
      "terminal": true
    }
  }
}
