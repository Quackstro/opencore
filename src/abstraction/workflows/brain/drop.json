{
  "id": "brain-drop",
  "plugin": "brain",
  "version": "1.0.0",
  "ttl": 300000,
  "entryPoint": "enter-thought",
  "steps": {
    "enter-thought": {
      "type": "text-input",
      "content": "üß† Brain Drop\n\nCapture a thought ‚Äî it will be automatically classified:",
      "placeholder": "What's on your mind?",
      "validation": {
        "minLength": 1,
        "maxLength": 2000,
        "errorMessage": "Please enter something to capture."
      },
      "next": "execute-drop"
    },
    "execute-drop": {
      "type": "info",
      "content": "Saving thought...",
      "toolCall": {
        "name": "brain_drop",
        "paramMap": {
          "text": "$data.enter-thought.input",
          "source": "drop"
        },
        "onError": "error"
      },
      "next": "done"
    },
    "done": {
      "type": "info",
      "content": "‚úÖ Thought captured!",
      "terminal": true
    },
    "error": {
      "type": "choice",
      "content": "‚ùå Failed to save thought.\n\n{{error}}\n\nWhat would you like to do?",
      "options": [
        {
          "id": "retry",
          "label": "üîÑ Retry",
          "style": "primary"
        },
        {
          "id": "cancel",
          "label": "‚ùå Cancel",
          "style": "danger"
        }
      ],
      "includeBack": false,
      "includeCancel": false,
      "transitions": {
        "retry": "execute-drop",
        "cancel": "error-cancelled"
      }
    },
    "error-cancelled": {
      "type": "info",
      "content": "Operation cancelled.",
      "terminal": true
    }
  }
}
