{
  "id": "opencore-update",
  "plugin": "opencore",
  "version": "1.0.0",
  "ttl": 600000,
  "entryPoint": "confirm-update",
  "steps": {
    "confirm-update": {
      "type": "confirm",
      "content": "üîÑ Update OpenCore\n\nThis will check for and apply available updates. The system may restart.\n\nProceed?",
      "confirmLabel": "Update",
      "denyLabel": "Cancel",
      "transitions": {
        "yes": "execute-update",
        "no": "cancelled"
      }
    },
    "execute-update": {
      "type": "info",
      "content": "Updating OpenCore...",
      "toolCall": {
        "name": "opencore_update",
        "paramMap": {},
        "onError": "error"
      },
      "next": "done"
    },
    "done": {
      "type": "info",
      "content": "‚úÖ Update complete. Check status above.",
      "terminal": true
    },
    "cancelled": {
      "type": "info",
      "content": "Update cancelled.",
      "terminal": true
    },
    "error": {
      "type": "choice",
      "content": "‚ùå Update failed. later.\n\n{{error}}\n\nWhat would you like to do?",
      "options": [
        {
          "id": "retry",
          "label": "üîÑ Retry",
          "style": "primary"
        },
        {
          "id": "cancel",
          "label": "‚ùå Cancel",
          "style": "danger"
        }
      ],
      "includeBack": false,
      "includeCancel": false,
      "transitions": {
        "retry": "execute-update",
        "cancel": "error-cancelled"
      }
    },
    "error-cancelled": {
      "type": "info",
      "content": "Operation cancelled.",
      "terminal": true
    }
  }
}
