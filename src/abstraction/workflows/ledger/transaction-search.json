{
  "id": "ledger-transaction-search",
  "plugin": "ledger",
  "version": "1.0.0",
  "ttl": 300000,
  "showProgress": false,
  "entryPoint": "enter-query",
  "steps": {
    "enter-query": {
      "type": "text-input",
      "content": "üîç Transaction Search\n\nEnter a merchant name or description to search for:",
      "placeholder": "e.g., Amazon, Starbucks",
      "validation": {
        "minLength": 1,
        "maxLength": 100,
        "errorMessage": "Please enter a search term."
      },
      "next": "execute-search"
    },
    "execute-search": {
      "type": "info",
      "content": "Searching transactions for \"{{data.enter-query.input}}\"...",
      "toolCall": {
        "name": "ledger_transactions",
        "paramMap": {
          "action": "search",
          "description": "$data.enter-query.input"
        },
        "onError": "error"
      },
      "next": "done"
    },
    "done": {
      "type": "info",
      "content": "üîç Search complete. Results shown above\n\n{{result}}",
      "terminal": true
    },
    "error": {
      "type": "choice",
      "content": "‚ùå Search failed.\n\n{{error}}\n\nWhat would you like to do?",
      "options": [
        {
          "id": "retry",
          "label": "üîÑ Retry",
          "style": "primary"
        },
        {
          "id": "cancel",
          "label": "‚ùå Cancel",
          "style": "danger"
        }
      ],
      "includeBack": false,
      "includeCancel": false,
      "transitions": {
        "retry": "execute-search",
        "cancel": "error-cancelled"
      }
    },
    "error-cancelled": {
      "type": "info",
      "content": "Operation cancelled.",
      "terminal": true
    }
  }
}
