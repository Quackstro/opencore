{
  "id": "heal-health-check",
  "plugin": "heal",
  "version": "1.0.0",
  "ttl": 300000,
  "showProgress": false,
  "entryPoint": "choose-check",
  "steps": {
    "choose-check": {
      "type": "choice",
      "content": "üè• Health Check\n\nWhat would you like to check?",
      "options": [
        {
          "id": "system",
          "label": "System Health"
        },
        {
          "id": "plugins",
          "label": "Plugin Status"
        },
        {
          "id": "connectivity",
          "label": "Connectivity"
        }
      ],
      "transitions": {
        "system": "execute-system",
        "plugins": "execute-plugins",
        "connectivity": "execute-connectivity"
      }
    },
    "execute-system": {
      "type": "info",
      "content": "Running system health check...",
      "toolCall": {
        "name": "heal_check",
        "paramMap": {
          "target": "system"
        },
        "onError": "error"
      },
      "next": "done"
    },
    "execute-plugins": {
      "type": "info",
      "content": "Checking plugin health...",
      "toolCall": {
        "name": "heal_check",
        "paramMap": {
          "target": "plugins"
        },
        "onError": "error"
      },
      "next": "done"
    },
    "execute-connectivity": {
      "type": "info",
      "content": "Testing connectivity...",
      "toolCall": {
        "name": "heal_check",
        "paramMap": {
          "target": "connectivity"
        },
        "onError": "error"
      },
      "next": "done"
    },
    "done": {
      "type": "info",
      "content": "‚úÖ Health check complete. Results shown above\n\n{{result}}",
      "terminal": true
    },
    "error": {
      "type": "choice",
      "content": "‚ùå Health check failed. Some services may be unavailable.\n\n{{error}}\n\nWhat would you like to do?",
      "options": [
        {
          "id": "retry",
          "label": "üîÑ Retry",
          "style": "primary"
        },
        {
          "id": "cancel",
          "label": "‚ùå Cancel",
          "style": "danger"
        }
      ],
      "includeBack": false,
      "includeCancel": false,
      "transitions": {
        "retry": "execute-system",
        "cancel": "error-cancelled"
      }
    },
    "error-cancelled": {
      "type": "info",
      "content": "Operation cancelled.",
      "terminal": true
    }
  }
}
